<?xml version="1.0"?>
<block>
  <name>MIMO channel estimator</name>
  <key>lte_mimo_channel_estimator</key>
  <category>lte</category>
  <import>import lte</import>
  <make>lte.mimo_channel_estimator($rxant, $subcarriers, $tag_key,"pilots", $pilot_carriers, $pilot_symbols)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>subcarriers</name>
    <key>subcarriers</key>
    <type>int</type>
  </param>

  <param>
    <name>RX antennas</name>
    <key>rxant</key>
    <type>int</type>
  </param>

  <param>
    <name>tag key value</name>
    <key>tag_key</key>
    <type>string</type>
  </param>
  
  <param>
    <name>pilot carrier map</name>
    <key>pilot_carriers</key>
    <type>raw</type>
  </param>
  
  <param>
    <name>pilot symbol values</name>
    <key>pilot_symbols</key>
    <type>raw</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$subcarriers*$rxant</vlen>
  </sink>
  
  <sink>
    <name>pilots</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$subcarriers*$rxant</vlen>
  </source>
</block>
