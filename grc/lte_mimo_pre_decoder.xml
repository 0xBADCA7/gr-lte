<?xml version="1.0"?>
<block>
  <name>MIMO pre decoder</name>
  <key>lte_mimo_pre_decoder</key>
  <category>lte</category>
  <import>import lte</import>
  <make>lte.mimo_pre_decoder($rxant, $N_ant, $vlen, $style)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>antenna ports</name>
    <key>N_ant</key>
    <type>int</type>
  </param>

  <param>
    <name>vector length</name>
    <key>vlen</key>
    <type>int</type>
  </param>
  
  <param>
    <name>RX style</name>
    <key>style</key>
    <type>string</type>
  </param>

  <param>
    <name>RX antennas</name>
    <key>rxant</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$vlen*$rxant</vlen>
  </sink>
  
  <sink>
    <name>ant_p_est</name>
    <type>complex</type>
    <vlen>$vlen*$rxant</vlen>
    <nports>$N_ant</nports>
  </sink>
   
  <sink>
    <name>N_ant</name>
    <type>message</type>
    <optional>1</optional>
  </sink>  

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
 
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </source>

</block>
